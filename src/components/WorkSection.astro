---
// Work section component for resume/employment information
import { getWorkPreview } from '../data/work';

const { currentWork, topSkills } = getWorkPreview();
---

<section class="section">
  <div class="container">
    <h2 class="section-title">Work</h2>
    <div class="work-content">
      <div class="work-item current">
        <div class="work-header">
          <h3 class="job-title">{currentWork.title}</h3>
          <span class="company">{currentWork.company}</span>
        </div>
        <div class="work-meta">
          <span class="timeline">{currentWork.timeline}</span>
          {currentWork.location && <span class="location">{currentWork.location}</span>}
        </div>
        <div class="work-description">
          <p>{currentWork.description}</p>
          <div class="skills">
            {topSkills.map(skill => (
              <span class="skill">{skill}</span>
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <div class="resume-link">
      <a href="/work" class="cta-link">
        View Full Resume â†’
      </a>
    </div>
  </div>
</section>

<style>
  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  .work-content {
    margin-bottom: 2rem;
  }

  .work-item {
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--color-border-light);
  }

  .work-item:last-child {
    border-bottom: none;
  }

  .work-item.current {
    position: relative;
  }

  .work-item.current::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 1.5rem;
    width: 3px;
    height: 2rem;
    background-color: var(--color-accent);
    border-radius: 2px;
  }

  .work-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.5rem;
  }

  .job-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .company {
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .work-meta {
    margin-bottom: 1rem;
    display: flex;
    gap: 1rem;
  }

  .timeline, .location {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .work-description p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
  }

  .resume-link {
    text-align: center;
    margin-top: 2rem;
  }

  .cta-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-accent);
    border-radius: 6px;
    display: inline-block;
    transition: var(--transition-hover);
  }

  .cta-link:hover {
    background-color: var(--color-accent);
    color: var(--color-bg);
  }

  @media (max-width: 768px) {
    .work-item.current::before {
      left: 0;
    }
    
    .work-header {
      flex-direction: column;
      gap: 0.25rem;
    }
    
    .skills {
      justify-content: flex-start;
    }
  }
</style>