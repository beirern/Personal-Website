---
import BaseLayout from '../layouts/BaseLayout.astro';
import { currentWork, previousWork, skillCategories, education, personalInterests } from '../data/work';
---

<BaseLayout title="Work & Experience - Nicola Beirer">
  <div class="container">
    <div class="page-header">
      <h1>Work & Experience</h1>
      <p class="page-description">
        My professional journey, skills, and experience in software development and engineering.
      </p>
    </div>

    <div class="work-content">
      
      <!-- Current Position -->
      <section class="work-section">
        <h2>Current Position</h2>
        <div class="work-item featured">
          <div class="work-header">
            <h3 class="job-title">{currentWork.title}</h3>
            <span class="company">{currentWork.company}</span>
          </div>
          <div class="work-meta">
            <span class="timeline">{currentWork.timeline}</span>
            {currentWork.location && <span class="location">{currentWork.location}</span>}
          </div>
          <div class="work-description">
            <p>{currentWork.description}</p>
            <ul class="achievements">
              {currentWork.achievements.map(achievement => (
                <li>{achievement}</li>
              ))}
            </ul>
          </div>
        </div>
      </section>

      <!-- Previous Experience -->
      <section class="work-section">
        <h2>Previous Experience</h2>
        {previousWork.map(work => (
          <div class="work-item">
            <div class="work-header">
              <h3 class="job-title">{work.title}</h3>
              <span class="company">{work.company}</span>
            </div>
            <div class="work-meta">
              <span class="timeline">{work.timeline}</span>
              {work.location && <span class="location">{work.location}</span>}
            </div>
            <div class="work-description">
              <p>{work.description}</p>
              <ul class="achievements">
                {work.achievements.map(achievement => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </section>

      <!-- Skills -->
      <section class="work-section">
        <h2>Technical Skills</h2>
        <div class="skills-grid">
          {skillCategories.map(category => (
            <div class="skill-category">
              <h3>{category.name}</h3>
              <div class="skills-list">
                {category.skills.map(skill => (
                  <span class="skill-tag">{skill}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Education -->
      <section class="work-section">
        <h2>Education</h2>
        {education.map(edu => (
          <div class="work-item">
            <div class="work-header">
              <h3 class="job-title">{edu.title}</h3>
              <span class="company">{edu.institution}</span>
            </div>
            <div class="work-meta">
              <span class="timeline">{edu.timeline}</span>
            </div>
            <div class="work-description">
              <p>{edu.description}</p>
            </div>
          </div>
        ))}
      </section>

      <!-- Personal Projects & Interests -->
      <section class="work-section">
        <h2>Beyond Code</h2>
        <div class="personal-content">
          <p>When I'm not coding, you can find me:</p>
          <ul class="personal-interests">
            {personalInterests.map(interest => (
              <li><strong>{interest.category}:</strong> {interest.description}</li>
            ))}
          </ul>
        </div>
      </section>

    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .page-description {
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .work-content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .work-section {
    position: relative;
  }

  .work-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--color-text);
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-accent);
  }

  .work-item {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem;
    margin-bottom: 2rem;
    transition: var(--transition-hover);
  }

  .work-item.featured {
    border-color: var(--color-accent);
    position: relative;
  }

  .work-item.featured::before {
    content: 'Current';
    position: absolute;
    top: -10px;
    left: 2rem;
    background: var(--color-accent);
    color: var(--color-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .work-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .job-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .company {
    color: var(--color-accent);
    font-weight: 600;
  }

  .work-meta {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .work-description p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .achievements {
    list-style: none;
    padding: 0;
  }

  .achievements li {
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.6;
  }

  .achievements li::before {
    content: '▸';
    color: var(--color-accent);
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .skills-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .skill-category h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: var(--transition-hover);
  }

  .skill-tag:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .personal-content p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .personal-interests {
    list-style: none;
    padding: 0;
  }

  .personal-interests li {
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.6;
  }

  .personal-interests li::before {
    content: '●';
    color: var(--color-accent);
    position: absolute;
    left: 0;
  }

  .personal-interests strong {
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    .work-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    .work-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>