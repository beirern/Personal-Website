<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .page-description {
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .projects-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--color-text);
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-accent);
  }

  .project-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem;
    margin-bottom: 2rem;
    transition: var(--transition-hover), box-shadow 0.2s ease;
  }

  .project-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 12px var(--color-shadow-light);
  }

  .project-card.featured {
    border-color: var(--color-accent);
    position: relative;
  }

  .project-card.featured::before {
    content: 'Featured';
    position: absolute;
    top: -10px;
    left: 2rem;
    background: var(--color-accent);
    color: var(--color-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 4px;
    transition: var(--transition-hover);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .project-link:hover {
    color: var(--color-accent);
    background-color: var(--color-bg-secondary);
  }

  .project-description {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .project-features {
    margin-bottom: 1.5rem;
  }

  .project-features h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .project-features ul {
    list-style: none;
    padding: 0;
  }

  .project-features li {
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .project-features li::before {
    content: '▸';
    color: var(--color-accent);
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: var(--transition-hover);
  }

  .tech-tag:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .github-section {
    text-align: center;
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
  }

  .github-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .github-section p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    padding: 1rem 2rem;
    border: 1px solid var(--color-accent);
    border-radius: 6px;
    transition: var(--transition-hover);
    font-size: 1.1rem;
  }

  .github-link:hover {
    background-color: var(--color-accent);
    color: var(--color-bg);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    .project-header {
      flex-direction: column;
      gap: 1rem;
    }

    .project-links {
      align-self: flex-start;
    }

    .github-link {
      font-size: 1rem;
      padding: 0.75rem 1.5rem;
    }
  }
</style>