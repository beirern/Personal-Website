---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects, getFeaturedProjects, getProjectsByCategory } from '../data/projects';

const featuredProjects = getFeaturedProjects();
const systemArchProjects = getProjectsByCategory('system-architecture');
const academicProjects = getProjectsByCategory('academic');
const experimentalProjects = getProjectsByCategory('experimental');
---

<BaseLayout title="Software Projects & Portfolio - Nicola Beirer">
  <div class="container">
    <div class="page-header">
      <h1>Projects</h1>
      <p class="page-description">
        A collection of my software development projects, from personal experiments to practical applications.
      </p>
    </div>

    <div class="projects-content">

      <!-- Featured Projects -->
      <section class="projects-section">
        <h2>Featured Projects</h2>
        
        {featuredProjects.map((project) => (
          <div class={`project-card ${project.id === 'personal-website' ? 'featured' : ''}`}>
            <div class="project-header">
              <h3 class="project-title">{project.title}</h3>
              <div class="project-links">
                {project.links.map((link) => (
                  <a href={link.url} target="_blank" rel="noopener" class="project-link">
                    {link.type === 'github' && (
                      <svg viewBox="0 0 24 24" width="20" height="20">
