---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PoemPreview from '../components/PoemPreview.astro';

// Get all poems and filter based on environment
const allPoems = await getCollection('poems');
const isDev = import.meta.env.DEV;

const visiblePoems = allPoems
	.filter(poem => isDev || (!poem.data.draft && !poem.data.invisible))
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Poems - Nicola Beirer's Blog">
	<h1>All Poems</h1>
	<div class="poems-container">
		{visiblePoems.map((poem) => (
			<PoemPreview poem={poem} />
		))}
	</div>
</BaseLayout>